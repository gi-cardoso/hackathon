generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // ou mysql/sqlite
  url      = env("DATABASE_URL")
}

// 1. Especialidades (Para busca inicial)
model Specialty {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  doctors Doctor[]
}

// 2. Médicos
model Doctor {
  id       Int                 @id @default(autoincrement())
  name     String
  crm              String             @unique
  city           String?
  specialtyId  Int
  specialty        Specialty      @relation(fields: [specialtyId], references: [id])
  availableHours   AvailableHour[]
  bookings         Booking[]
}

// 3. Available Slot (Horário Disponível Real)
model AvailableHour {
  id          Int         @id @default(autoincrement())
  doctorId    Int
  doctor      Doctor      @relation(fields: [doctorId], references: [id])
  dateTime    DateTime    
  isAvailable Boolean     @default(true) 
  booking     Booking?    
}

// 4. Booking (Agendamento Efetivado)
model Booking {
  id                  Int                @id @default(autoincrement())
  protocol            String             @unique // Confirmation protocol
  availableHourId     Int                @unique // Ensures 1 slot has 1 booking
  availableHour       AvailableHour      @relation(fields: [availableHourId], references: [id])
  patientName         String
  patientBirth        DateTime
  reasonConsultation  String
  doctorId            Int
  doctor              Doctor             @relation(fields: [doctorId], references: [id])
  createdAt           DateTime           @default(now())
}